{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "preserve",

    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noEmitOnError": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true
  },
  "include": ["./client/**/*"]
}
